zone "{{domain_name}}" {
{% if inventory_hostname in groups['dns_primary'] %}
    type primary;
    allow-transfer {
        127.0.0.1;
        key transfer.key;
    };
    allow-update {
        127.0.0.1;
        key nsupdate.key;
    };
{% else %}
    type secondary;
    masters {
{% for vm in groups ['dns_primary'] %}
    {{hostvars[vm]['ansible_default_ipv4']['address']}};
{% endfor %}
    };
{% endif %}
    file "db.{{domain_name}}";
};
zone "168.192.in-addr.arpa" {
{% if inventory_hostname in groups['dns_primary'] %}
    type primary;
    allow-transfer {
        127.0.0.1;
        key transfer.key;
    };
    allow-update {
        127.0.0.1;
        key nsupdate.key;
    };
{% else %}
    type secondary;
    masters {
{% for vm in groups ['dns_primary'] %}
    {{hostvars[vm]['ansible_default_ipv4']['address']}};
{% endfor %}
    };
{% endif %}
    file "rev.db.{{domain_name}}";
};

{% if inventory_hostname in groups ['dns_secondary'] %}
{% for prim_server in groups['dns_primary'] %}
server {{hostvars[prim_server]['ansible_default_ipv4']['address'] }} {
    keys {transfer.key;};
};
{% endfor %}
{% endif %}